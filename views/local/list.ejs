<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Restaurantes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilos personalizados para mejorar el diseño */
        .table th, .table td {
            vertical-align: middle;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004080;
        }
        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }
        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
        .container {
            max-width: 1200px;
        }
        .table-container {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .table-container thead th {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>

    <%- include('../../components/header.ejs') %>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Restaurantes</h1>
        <a href="/restaurantes/crear" class="btn btn-primary mb-3">Agregar Restaurante</a>

        <div class="table-container bg-white">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (restaurantes && restaurantes.length > 0) { %>
                        <% restaurantes.forEach(restaurante => { %>
                            <tr>
                                <td><%= restaurante.nombre %></td>
                                <td><%= restaurante.direccion %></td>
                                <td><%= restaurante.descripcion %></td>
                                <td>
                                    <a href="/restaurantes/editar/<%= restaurante.id %>" class="btn btn-warning btn-sm">Editar</a>
                                    <form action="/restaurantes/eliminar/<%= restaurante.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">No hay restaurantes disponibles.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
    <%- include('../../components/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>