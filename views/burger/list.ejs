<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Burgers</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome (para íconos) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .profile-img {
            max-width: 50px;
            max-height: 50px;
            object-fit: cover;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <%- include('../../components/header.ejs') %>
    
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-4">Lista de Burgers</h1>
                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Imagen</th>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% burgers.forEach(burger => { %>
                            <tr>
                                <td class="text-center">
                                    <img src="/images/burgers/<%= burger.id %>.jpg" alt="Foto de burger"
                                        class="profile-img img-thumbnail" />
                                </td>
                                <td class="text-center"><%= burger.id %></td>
                                <td><%= burger.nombre %></td>
                                <td><%= burger.descripcion %></td>
                                <td class="text-center">$<%= burger.precio %></td> 
                                <td class="text-center">
                                    <div class="actions">
                                        <a href="/burgers/<%= burger.id %>/edit" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <form style="display:inline;" method="post" action="/burgers/<%= burger.id %>/delete">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Eliminar
                                            </button>
                                        </form>
                                        <a href="/burgers/<%= burger.id %>/burger" class="btn btn-success btn-sm">
                                            <i class="fas fa-image"></i> Agregar Imagen
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../../components/footer.ejs') %>

    <!-- Bootstrap JS (opcional si no lo usas para otras funciones) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
