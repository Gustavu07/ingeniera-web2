<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo de Burgers</title>
    <!-- Agrega Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Tu archivo CSS personalizado (opcional) -->
    <link rel="stylesheet" href="/public/css/catalogo.css">
    <style>
        .burger-item {
            margin-bottom: 30px;
        }
        .burger-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <%- include('../../components/header.ejs') %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Catálogo de Burgers</h1>

        <div class="row">
            <% burgers.forEach(burger => { %>
                <div class="col-md-4">
                    <div class="card burger-item">
                        <img src="/images/burgers/<%= burger.id %>.jpg" alt="Foto de burger" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= burger.nombre %></h5>
                            <p class="card-text text-center"><%= burger.descripcion %></p>
                            <p class="burger-price">$<%= burger.precio %></p> 
                            <a href="/burgers/<%= burger.id %>" class="btn btn-success btn-sm">
                                <i class="fas fa-image"></i> Ver Hamburguesa
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('../../components/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
