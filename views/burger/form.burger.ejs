<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Crear Burger</h5>
                    <form class="needs-validation" method="post" action="<% if (burger) { %>/burgers/<%=burger.id%>/edit<% } else {%>/burgers/create<% } %>">
                        <% if (errors) { %>
                            <div class="alert alert-warning">
                                <%= errors.message %>
                            </div>
                        <% } %>
                        <div class="mt-2">
                            <label>Nombre</label>
                            <input required class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%=burger && burger.nombre %>">
                            <% if (errors?.nombre) { %>
                                <div class="error-label">Por favor ingrese un nombre</div>
                            <% } %>
                        </div>
                        <div class="mt-2">
                            <label>Descripción</label>
                            <input required class="form-control" type="text" name="descripcion" placeholder="Descripción" value="<%=burger && burger.descripcion %>">
                            <% if (errors?.descripcion) { %>
                                <div class="error-label">Por favor ingrese una descripción</div>
                            <% } %>
                        </div>

                        <div class="mb-2">
                            <label for="precio">Precio</label>
                            <input required class="form-control" type="number" name="precio" id="precio" step="0.01" required placeholder="Precio" value="<%=burger && burger.precio %>">
                            <% if (errors?.precio) { %>
                                <div class="error-label">Por favor ingrese un precio</div>
                            <% } %>
                        </div>

                        <div class="form-group">
                            <label for="localId">Local:</label>
                            <select id="localId" name="localId" class="form-control" required>
                                <% restaurantes.forEach(restaurante => { %>
                                    <option value="<%= restaurante.id %>" <%= burger && burger.localId === restaurante.id ? 'selected' : '' %>><%= restaurante.nombre %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="mt-2">
                            <input class="btn btn-primary" type="submit" value="Enviar">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
